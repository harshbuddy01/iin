# SendGrid Email Configuration
# Sign up at https://sendgrid.com/ to get your API key
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
SENDGRID_SENDER_EMAIL=your-verified-email@gmail.com

# Platform Configuration
ADMIN_EMAIL=admin@yourdomain.com
SUPPORT_EMAIL=support@yourdomain.com
PLATFORM_URL=https://your-platform-url.com
ADMIN_PANEL_URL=https://your-platform-url.com

# MongoDB Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database

# Razorpay Payment Gateway
RAZORPAY_API_KEY=your-razorpay-key
RAZORPAY_API_SECRET=your-razorpay-secret

# Admin Credentials
ADMIN_PASSWORD=your-secure-admin-password

# Server Configuration
PORT=8080
NODE_ENV=development
